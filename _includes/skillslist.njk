<div class="container" >

  <div class= "card-columns align-item-center justify-content-center align-iten-sm-center align-iten-xs-center align-iten-lg-center align-item-md-center justify-content-xl-center justify-content-md-center justify-content-lg-center justify-content-sm-center justify-content-xs-center" >
    {% for skill in skillslist | reverse %}

      <div class = "card animate__animated animate__bounceInUp wow" style="width:18rem; margin:2rem;">

        <li class="skilllist-item{% if skill.url == url %} skilllist-item-active{% endif %}">
          <h5 class="card-title">
            {% if skill.data.title %}{{ skill.data.title }}
            {% else %}
              <code>{{ skill.url }}</code>
            {% endif %}

          </h5>
          {# <time class="skilllist-date" datetime="{{ skill.date | htmlDateString }}">{{ skill.date | readableDate }}</time> #}
          {% for tag in skill.data.tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              {# <a class="card-text" href="{{ tagUrl | url }}" class="tag">{{ tag }}</a> #}
              <p class = "card-body">{{ tag }}</p>
            {%- endif -%}
          {% endfor %}
        </li>

        <div class="card-footer text-center">
          <a href=" {{ skill.url | url }}" class="btn btn-primary skilllist-link" style="margin-top:1rem;" onclick = "dynamic_styling()">Explore more</a>
        </div>

        <!--end of card body-->

      </div>
      <!--end of card-->
    {% endfor %}
  </div>

</div>